<script>
const dingSound = document.getElementById('dingSound');

function spawnFloatingCoin(event) {
  const type = event.target.getAttribute('data-type');
  if(type !== 'coin') return;

  dingSound.currentTime = 0;
  dingSound.play();

  const rect = event.target.getBoundingClientRect();
  const coin = document.createElement('div');
  coin.classList.add('float-item');
  coin.style.background = 'url(https://upload.wikimedia.org/wikipedia/commons/2/27/US_quarter_obverse_2006.png) no-repeat center center';
  coin.style.backgroundSize = 'contain';
  coin.style.left = (rect.left + window.scrollX + Math.random()*10) + 'px';
  coin.style.top = (rect.top + window.scrollY) + 'px';
  coin.style.width = '40px';
  coin.style.height = '40px';
  document.body.appendChild(coin);

  coin.animate([
    { transform: 'translateY(0) scale(1)', opacity: 1 },
    { transform: 'translateY(-150px) scale(1.5)', opacity: 0 }
  ], { duration: 1200, easing: 'ease-out' });

  setTimeout(() => coin.remove(), 1200);
}

document.querySelectorAll('.interactive').forEach(el => {
  if(el.tagName === 'TEXTAREA' || el.tagName === 'INPUT') {
    el.addEventListener('blur', spawnFloatingCoin);
  } else {
    el.addEventListener('change', spawnFloatingCoin);
  }
});

function showCollege() {
  document.getElementById('collegeColumn').classList.remove('hidden');
  document.getElementById('collegeColumn2').classList.remove('hidden');
  document.getElementById('careerColumn').classList.add('hidden');
  document.getElementById('careerColumn2').classList.add('hidden');
}

function showCareer() {
  document.getElementById('careerColumn').classList.remove('hidden');
  document.getElementById('careerColumn2').classList.remove('hidden');
  document.getElementById('collegeColumn').classList.add('hidden');
  document.getElementById('collegeColumn2').classList.add('hidden');
}
</script>

